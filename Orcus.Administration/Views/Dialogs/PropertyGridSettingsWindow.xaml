<controls:MetroWindow x:Class="Orcus.Administration.Views.Dialogs.PropertyGridSettingsWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:propertyGrid="clr-namespace:Orcus.Administration.Controls.PropertyGrid"
                      xmlns:viewModels="clr-namespace:Orcus.Administration.ViewModels;assembly=Orcus.Administration.ViewModels"
                      Title="PropertyGridSettingsWindow"
                      Width="300"
                      Height="300"
                      d:DataContext="{d:DesignInstance viewModels:PropertyGridSettingsViewModel}"
                      ShowIconOnTitleBar="False"
                      Style="{StaticResource NormalWindow}"
                      mc:Ignorable="d">
    <propertyGrid:PropertyGrid PropertiesProvider="{Binding PropertiesProvider}" />
</controls:MetroWindow>