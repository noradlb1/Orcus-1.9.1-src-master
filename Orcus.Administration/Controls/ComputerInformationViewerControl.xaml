                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock>
                    <Run Text="{DynamicResource Name}" /><Run Text=":" />
                </TextBlock>
                <TextBox Grid.Column="1"
                         Style="{StaticResource ValueText}"
