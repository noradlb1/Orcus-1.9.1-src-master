        </StackPanel>
        <StackPanel Margin="0,30,0,0" Orientation="Vertical">
            <TextBlock Style="{StaticResource HeaderText}" Text="{DynamicResource Hardware}" />
            <TextBlock Margin="0,5,0,0"
                       FontSize="13"
                       FontWeight="Bold"
                       Text="{DynamicResource Processor}" />
            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
